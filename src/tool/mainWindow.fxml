<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="tool.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <children>

        <Button onAction="#sayHelloWorld" text="Hello World" />
        <Label fx:id="helloWorld" GridPane.rowIndex="1" />

        <Button onAction="#openPapyrusModelSelector" text="Open Papyrus model" GridPane.rowIndex="2" />
        <TextArea fx:id="textArea" prefHeight="800.0" prefWidth="600.0" GridPane.rowIndex="3" />
    </children>
</GridPane>